<div class="container px-5 px-sm-0">
  <div class="row">
  <% if @book_new.errors.any? %>
  <h2>
    <%= @book_new.errors.count %> errors prohibited this book from being saved:
  </h2>
  <ul>
    <% @book_new.errors.full_messages.each do |message| %>
      <li><%= message %></li>
<% end %>
  </ul>
<% end %>

    <%= render'users/list',user: @user, book: @book_new %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @books.each do |book| %>
          <tbody>
            <tr>
              <td>
                <%=link_to image_tag("no_image.jpeg", class:"attachment user profile_image fallback"), user_path(book.user) %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>