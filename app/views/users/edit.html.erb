<div class="container">
  <di class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
  <h2>
    <%= @user.errors.count %> errors prohibited this book from being saved:
  </h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
<% end %>
  </ul>
<% end %>
      <%=form_with model:@user,local:true do |f| %>

      <div class="form-group">
        <label for="user_name">Name</label><br>
        <%=f.text_field :name, autofocus: true,id:"user_name", placeholder: "名前" %>
      </div>
      <div class="form-group">
        <label for="inputImage">ProfileImage</label><br>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>
      <div class="form-group">
        <label for="user_introduction">Introduction</label><br>
        <%= f.text_area :introduction %>
      </div>
      <%= f.submit "Update User", class:"btn btn-secondary"%>
      <% end %>
    </div>
  </div>
</div>